<h1>Create a New Song</h1>

<%= form_for @song do |f| %>
    <% if @song.errors.any? %>
        <div id="error_explanation">
            <ul>
                <% @songs.errors.full_messages do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :released %>
    <%= f.check_box :released %>

    <%= f.label :release_year %>
    <%= f.number_field :release_year %>

    <%= f.label :artist_name %>
    <%= f.text_field :artist_name %>

    <%= f.label :genre %>
    <%= f.text_field :genre %>
<% end %>