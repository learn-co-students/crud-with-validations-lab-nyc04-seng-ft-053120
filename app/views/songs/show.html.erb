<h1><%= @song.title %></h1>

<b>Artist: </b><%= @song.artist_name %> <br>
<b>Genre: </b><%= @song.genre %><br>
<b>Released: </b><%= @song.released ? "Yes" : "No" %><br>
<b>Release Year: </b><%= @song.release_year %><br><br>

<%= link_to "Delete", @song, method: :delete, data: { confirm: "Are you sure you want to delete this song?" }%> | <%= link_to "Edit", edit_song_path(@song) %> | <%= link_to "Index", songs_path %>